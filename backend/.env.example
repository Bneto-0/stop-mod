PORT=8787

# sandbox | production
PAGBANK_ENV=sandbox
PAGBANK_TOKEN=SEU_TOKEN_AQUI
# opcional (usado como fallback de autenticacao Basic): seu-email@pagbank.com.br
PAGBANK_EMAIL=

# URLs da loja
PAGBANK_RETURN_URL=https://stopmod.com.br/carrinho/
PAGBANK_REDIRECT_URL=https://stopmod.com.br/carrinho/

# Webhooks (opcional, recomendado)
PAGBANK_NOTIFICATION_URL=https://seu-backend.com/api/pagbank/webhook
PAGBANK_PAYMENT_NOTIFICATION_URL=https://seu-backend.com/api/pagbank/webhook

# Permitir chamadas do frontend
FRONTEND_ORIGINS=http://localhost:5500,http://127.0.0.1:5500,http://localhost:3000,https://stopmod.com.br

# Auth seguro (obrigatorio para cadastro/login)
# Gere uma chave forte (minimo 32 chars):
# node -e "console.log(require('crypto').randomBytes(48).toString('hex'))"
AUTH_JWT_SECRET=COLE_UMA_CHAVE_FORTE_AQUI
AUTH_TOKEN_TTL_SEC=7200

# Verificacao civil de CPF (opcional)
# off | warn | strict
CPF_CIVIL_CHECK_MODE=off
# Endpoint do seu provedor KYC/CPF (POST JSON com cpf, fullName, birthDate)
CPF_CIVIL_CHECK_URL=
# Token Bearer do provedor (se existir)
CPF_CIVIL_CHECK_TOKEN=
CPF_CIVIL_CHECK_TIMEOUT_MS=6000

# Consulta de CPF para preencher nome automaticamente (opcional)
# Se vazio, usa CPF_CIVIL_CHECK_URL.
CPF_CIVIL_LOOKUP_URL=
CPF_CIVIL_LOOKUP_TOKEN=
CPF_CIVIL_LOOKUP_TIMEOUT_MS=6000
